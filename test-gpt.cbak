#include <stdio.h>
#include "fdf.h"

int handle_destroy_notify(void *param)
{
    printf("Window destroyed.\n");
    mlx_destroy_window(((void **)param)[0], ((void **)param)[1]);
    exit(0);
}

int main()
{
    void *mlx = mlx_init();
    void *win = mlx_new_window(mlx, 800, 600, "My Window");

    void *param[2] = { mlx, win };
    mlx_hook(win, DestroyNotify, StructureNotifyMask, &handle_destroy_notify, param);

    mlx_loop(mlx);

    return 0;
}
